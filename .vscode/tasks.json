{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile all",
            "dependsOn": [
                "compile TS",
                "compile WASM",
            ],
        },
        {
            "label": "compile TS",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc",
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": false,
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "compile WASM",
            "type": "shell",
            "command": "wat2wasm",
            "presentation": {
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": false,
            },
            "args": [
                "--output=${workspaceFolder}/web/pixels.wasm",
                "${workspaceFolder}/src/pixels.wat",
            ],
        },
    ],
}
